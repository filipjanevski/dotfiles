{
  "theme": "0x96f Theme",
  "icon_theme": "Colored Zed Icons Theme Light",
  "ui_font_size": 14,
  "ui_font_family": "CommitMono",
  "buffer_font_size": 14,
  "buffer_font_family": "CommitMono",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "terminal": {
    "working_directory": "current_project_directory",
    "copy_on_select": false,
    "font_family": "CommitMono",
    "font_size": 14
  },
  "git": {
    "hunk_style": "unstaged_hollow",
    "inline_blame": {
      "enabled": true
    }
  },
  "project_panel": {
    "dock": "left",
    "entry_spacing": "comfortable",
    "indent_size": 18
  },
  "collaboration_panel": {
    "button": false
  },
  "show_wrap_guides": false,
  "wrap_guides": [90, 100],
  "show_edit_predictions": true,
  "edit_predictions": {
    "disabled_globs": [
      "*.md",
      "*.json",
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/*.log",
      "**/secrets.yml"
    ],
    "mode": "subtle"
  },
  "agent": {
    "play_sound_when_agent_done": true,
    "default_profile": "write",
    "default_model": {
      "provider": "openai",
      "model": "gpt-5-mini"
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "format_on_save": "off",
  "languages": {
    "Make": { "format_on_save": "on", "hard_tabs": true, "tab_size": 4 },
    "XML": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 4,
      "show_edit_predictions": false
    },
    "YAML": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 2,
      "show_edit_predictions": false
    },
    "JSON": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 2,
      "show_edit_predictions": false
    },
    "TypeScript": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "!vtsls"]
    },
    "TSX": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "!vtsls"]
    },
    "JavaScript": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "!vtsls"]
    },
    "Svelte": { "format_on_save": "on", "hard_tabs": false, "tab_size": 2 },
    "CSS": { "format_on_save": "on", "hard_tabs": false, "tab_size": 2 },
    "Markdown": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 2,
      "wrap_guides": [100],
      "preferred_line_length": 100,
      "show_edit_predictions": false
    },
    "Go": { "format_on_save": "on", "hard_tabs": false, "tab_size": 2 },
    "Python": { "format_on_save": "on", "tab_size": 2 },
    "Lua": { "format_on_save": "on", "hard_tabs": true, "tab_size": 2 }
  },
  "file_types": {
    "TSX": ["*.tsx"],
    "TypeScript": ["*.ts"],
    "JavaScript": ["*.js", "*.jsx", "*.mjs"],
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "Shell": ["*.sh", "*.zsh"],
    "CSS": ["*.css", "*.scss"],
    "Lua": ["*.lua"]
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
