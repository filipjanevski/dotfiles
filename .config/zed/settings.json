{
  "edit_predictions": {
    "disabled_globs": ["*.md", ".env*", "*.json"],
    "mode": "eager"
  },
  "theme": "0x96f Theme",
  "icon_theme": "Colored Zed Icons Theme Dark",
  "font_size": 13,
  "font_family": "CommitMono",
  "ui_font_size": 14,
  "ui_font_family": "CommitMono",
  "buffer_font_size": 13,
  "buffer_font_family": "CommitMono",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "terminal": {
    "working_directory": "current_project_directory",
    "copy_on_select": false,
    "font_family": "CommitMono",
    "font_size": 13
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "project_panel": {
    "dock": "left",
    "entry_spacing": "comfortable",
    "indent_size": 18
  },
  "collaboration_panel": {
    "button": false
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "show_edit_predictions": true,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "format_on_save": "off",
  "languages": {
    "Make": { "format_on_save": "on", "hard_tabs": true, "tab_size": 4 },
    "XML": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 4,
      "show_edit_predictions": false
    },
    "YAML": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 2,
      "show_edit_predictions": false
    },
    "JSON": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 2,
      "show_edit_predictions": false
    },
    "TypeScript": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "!vtsls"]
    },
    "TSX": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "!vtsls"]
    },
    "JavaScript": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 2,
      "language_servers": ["typescript-language-server", "!vtsls"]
    },
    "Svelte": { "format_on_save": "on", "hard_tabs": false, "tab_size": 2 },
    "CSS": { "format_on_save": "on", "hard_tabs": false, "tab_size": 2 },
    "Markdown": {
      "format_on_save": "on",
      "hard_tabs": false,
      "tab_size": 2,
      "wrap_guides": [100],
      "preferred_line_length": 100,
      "show_edit_predictions": false
    },
    "Go": { "format_on_save": "on", "hard_tabs": false, "tab_size": 2 },
    "Python": { "format_on_save": "on", "tab_size": 2 }
  },
  "file_types": {
    "TSX": ["*.tsx"],
    "TypeScript": ["*.ts"],
    "JavaScript": ["*.js", "*.jsx", "*.mjs"],
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "Shell": ["*.sh", "*.zsh"],
    "CSS": ["*.css", "*.scss"]
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
